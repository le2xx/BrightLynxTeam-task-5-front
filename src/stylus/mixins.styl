font($size = false, $color = false, $ls = false, $lh = false, $weight = false)
  if $size
    font-size $size px
  if $color
    color $color
  if $ls
    letter-spacing $ls em
  if $lh
    line-height $lh px
  if $weight
    font-weight $weight

img()
  margin 10px
  width 300px

video()
  display inline-block
  margin 10px
